desc:MIDI Velocity Control
//tags: MIDI processing

slider1:1<-16,16,0.1>Velocity Multiply
slider2:0<-128,128,1>Velocity Add

in_pin:none
out_pin:none

@init
// this is a memory address location
// access by mem[0], mem[1], etc
mem = 0;

@block
arrlen = 0;
lowest_pitch = 129;
next_lowest_pitch = 129;
highest_pitch = -1;

while (
  // for each MIDI event...
  midirecv(offset, msg1, msg23) ? (
    eventtype=msg1&$xf0;
    velocity=(msg23/256)|0;
    pitch=msg23&127;

    eventtype == 144 ? (
      // event type is NOTE ON
      // store to array
      mem[arrlen * 3] = offset;
      mem[arrlen * 3 + 1] = msg1;
      mem[arrlen * 3 + 2] = msg23;
      arrlen += 1;
      // record the pitch
      pitch>highest_pitch ? (
        highest_pitch = pitch;
      );
      pitch<lowest_pitch ? (
        next_lowest_pitch = lowest_pitch;
        lowest_pitch = pitch;
      ) : (
        pitch<next_lowest_pitch ? (
          next_lowest_pitch = pitch;
        );
      );
    ) : (
      // event type is something else
      // passthrough
      midisend(offset, msg1, msg23);
    )
  );
);

// loop for arrlen times
i = 0;
loop (arrlen,
  // retrieve midi event from memory
  offset = mem[i * 3];
  msg1 = mem[i * 3 + 1];
  msg23 = mem[i * 3 + 2];

  midisend(offset, msg1, msg23);

  i += 1;
);


